{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "commonjs",
    "outDir": "out-tsc/lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": [
      "jasmine",
      "node"
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/lib/**/*.spec.ts",
    "src/lib/**/*.d.ts"
  ]
}