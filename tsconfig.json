{
  "compileOnSave": false,
  "compilerOptions": {
    "declaration": true,
    "importHelpers": true,
    "inlineSources": true,
    "lib": [
      "es2015"
    ],
    "module": "es2015",
    "moduleResolution": "node",
    "outDir": "out-tsc/lib",
    "sourceMap": true,
    "strict": true,
    "target": "es2015",
    "typeRoots": [
      "node_modules/@types"
    ],
    "types": []
  },
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ],
  "include": [
    "src/lib/**/*"
  ]
}